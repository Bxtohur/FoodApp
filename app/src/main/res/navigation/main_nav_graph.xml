<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bitohur.foodapp.presentation.home.FragmentHome"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_menuDetailFragment"
            app:destination="@id/menuDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuDetailFragment"
        android:name="com.bitohur.foodapp.presentation.detail.MenuDetailFragment"
        android:label="MenuDetailFragment" >
        <argument
            android:name="menu"
            app:argType="com.bitohur.foodapp.model.Menu"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>